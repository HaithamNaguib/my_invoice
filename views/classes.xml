<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--tree view of the Classes model-->
    <record id="classes_entry_tree" model="ir.ui.view">
        <field name="name">classes.entry.tree</field>
        <field name="model">classes.entry</field>
        <field name="arch" type="xml">
            <tree string="Classes">
                <field name="job"/>
                <field name="children"/>
                <field name="person_id"/>
            </tree>
        </field>
    </record>

    <!--form view of the Classes model-->
    <record id="classes_entry_form" model="ir.ui.view">
        <field name="name">classes.entry.form</field>
        <field name="model">classes.entry</field>
        <field name="arch" type="xml">
            <form string="Classes">
                <sheet>
                    <group>
                        <field name="job"/>
                        <field name="person_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                        <field name="children" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--action of the Classes menu-->
    <record id="action_classes" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">classes.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Class
            </p>
        </field>
    </record>

    <menuitem id="classes_entry" name="Classes" parent="society_root"
              action="action_classes" sequence="30"/>

</odoo>
