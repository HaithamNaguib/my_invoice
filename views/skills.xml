<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--tree view of the Skill model-->
    <record id="skills_entry_tree" model="ir.ui.view">
        <field name="name">skills.entry.tree</field>
        <field name="model">skills.entry</field>
        <field name="arch" type="xml">
            <tree string="Skills">
                <field name="skill"/>
                <field name="place"/>
            </tree>
        </field>
    </record>

    <!--form view of the Skill model-->
    <record id="skills_entry_form" model="ir.ui.view">
        <field name="name">skills.entry.form</field>
        <field name="model">skills.entry</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <group>
                        <field name="skill"/>
                        <field name="place"/>

                        <!--                        <field name="person_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>-->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--action of the Skill menu-->
    <record id="action_skills" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">skills.entry</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Skill
            </p>
        </field>
    </record>

    <menuitem id="skills_entry" name="Skills" parent="society_root"
              action="action_skills" sequence="31"/>


</odoo>
